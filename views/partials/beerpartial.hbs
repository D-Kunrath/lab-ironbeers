<div class="beer">
  <img src="{{this.image_url}}" alt="{{this.name}}">
  <div class="beer-info">
    <a href="/beers-{{this.id}}">
      <h2>{{this.name}}</h2>
    </a>
    <span>{{this.tagline}}</span>
    <p>{{this.description}}</p>

    {{#if moreInfo}}
    <h3>Food Pairing</h3>
    <ul>
      {{#each this.food_pairing }}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p><b>Brewers Tips</b>: {{this.brewers_tips}}</p>
    {{/if}}
  </div>
</div>